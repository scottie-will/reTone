{
  "manifest_version": 3,
  "name": "Social Media Rewriter",
  "version": "0.1.0",
  "description": "Rewrite social media posts to remove cringe, buzzwords, and humblebrag using local AI",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://www.reddit.com/*",
    "https://www.linkedin.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.reddit.com/*",
        "https://www.linkedin.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon16.png",
      "48": "icons/icon16.png",
      "128": "icons/icon16.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon16.png",
    "48": "icons/icon16.png",
    "128": "icons/icon16.png"
  }
}

